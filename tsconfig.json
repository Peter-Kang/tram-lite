{
	"include": ["./src/**/*", "module_types/modules.d.ts"],
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "esnext",
		"allowJs": true,
		"target": "esnext",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true
	}
}
